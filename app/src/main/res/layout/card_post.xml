<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/cardViewPost"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="115dp"
                android:layout_weight="2">
                <ImageView
                    android:id="@+id/ivProiflePicturePost"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_launcher_foreground" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="115dp"
                android:layout_weight="4"
                android:orientation="vertical"
                android:layout_marginEnd="12dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Titulo "
                    android:layout_marginTop="6dp"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvUserNamePost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User Name or item "
                    android:layout_marginTop="6dp"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:lines="1" />


                <TextView
                    android:id="@+id/tvDescriptionPost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="preview de la descripciÃ³n ++++++++++++++++++++++++++++++++++++++++++++++++++++++"
                    android:layout_marginTop="6dp"
                    android:ellipsize="end"
                    android:lines="2"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvFecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="fecha"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="2dp"
                    android:layout_gravity="end"/>

            </LinearLayout>


        </LinearLayout>



    </androidx.cardview.widget.CardView>